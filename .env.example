# App server
PORT=5000

# Supabase (required by server routes)
SUPABASE_URL=https://dpupymjdqlfsdfsaxolj.supabase.co
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY
SUPABASE_DB_SCHEMA=n8n_inventory

# Optional environment-specific overrides for header env selector (`dev` / `demo` / `prod`).
# If unset, each mode falls back to SUPABASE_URL + SUPABASE_SERVICE_ROLE_KEY.
SUPABASE_URL_DEV=https://dpupymjdqlfsdfsaxolj.supabase.co
SUPABASE_SERVICE_ROLE_KEY_DEV=YOUR_SERVICE_ROLE_KEY
SUPABASE_DB_SCHEMA_DEV=n8n_inventory
SUPABASE_URL_DEMO=https://dpupymjdqlfsdfsaxolj.supabase.co
SUPABASE_SERVICE_ROLE_KEY_DEMO=YOUR_SERVICE_ROLE_KEY
SUPABASE_DB_SCHEMA_DEMO=n8n_inventory_demo
SUPABASE_URL_PROD=https://dpupymjdqlfsdfsaxolj.supabase.co
SUPABASE_SERVICE_ROLE_KEY_PROD=YOUR_SERVICE_ROLE_KEY
SUPABASE_DB_SCHEMA_PROD=n8n_inventory

# Optional API logging mode:
# - minimal (default): method/path/status/duration only
# - verbose: includes truncated response payloads for debugging
API_LOG_MODE=minimal

# Optional for health visibility and local tooling
